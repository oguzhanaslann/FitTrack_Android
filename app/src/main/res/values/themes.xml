<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.FitTrack" parent="Base.Theme.FitTrack">
        <item name="colorPrimaryProfile">?attr/colorPrimary</item>
        <item name="colorPrimaryAuth">?attr/colorPrimary</item>
        <item name="colorOnPrimaryAuth">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_theme_light_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/md_theme_light_primary</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/md_theme_light_primary</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">@color/md_theme_light_primary</item>
        <item name="postSplashScreenTheme">@style/Theme.FitTrack</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

</resources>
