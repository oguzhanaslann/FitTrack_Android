<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_theme_light_primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/md_theme_light_primary</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/md_theme_light_primary</item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">@color/md_theme_light_primary</item>
        <item name="postSplashScreenTheme">@style/Theme.FitTrack</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>


    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSecondaryContainer">@color/md_theme_light_primary</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onPrimary</item>
        <item name="colorOnSurface">@color/md_theme_light_primary</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">?attr/colorSecondary</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
        <item name="android:textAppearance">?attr/textAppearanceBodySmall</item>
        <item name="shapeAppearance">?attr/shapeAppearanceLargeComponent</item>
        <item name="closeIconEnabled">false</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

</resources>
