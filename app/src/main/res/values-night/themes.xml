<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitTrack" parent="Base.Theme.FitTrack">
        <item name="colorPrimaryProfile">?attr/colorPrimary</item>
        <item name="colorPrimaryAuth">?attr/colorPrimary</item>
        <item name="colorOnPrimaryAuth">?attr/colorOnPrimary</item>
    </style>


    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/md_theme_dark_primary</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">
            @color/md_theme_dark_primary
        </item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">
            @drawable/ic_launcher_foreground
        </item>
        <item name="android:windowSplashScreenIconBackgroundColor" tools:targetApi="s">
            @color/md_theme_dark_primary
        </item>
        <item name="windowSplashScreenIconBackgroundColor">@color/md_theme_dark_primary</item>
        <item name="postSplashScreenTheme">@style/Theme.FitTrack</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSecondaryContainer">@color/md_theme_dark_primary</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_dark_onPrimary</item>
        <item name="colorOnSurface">@color/md_theme_dark_primary</item>
    </style>

</resources>
