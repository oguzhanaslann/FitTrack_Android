<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/MD3.Shape.Medium.Custom</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Widget.App.CardView.Border" parent="Widget.Material3.CardView.Outlined">
        <item name="cardBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="Widget.RulerView" parent="android:Widget">
        <item name="indicator">@drawable/ruler_indicator</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#999999</item>
        <item name="scaleSize">0.5dp</item>
        <item name="rulerSize">0.5dp</item>
        <item name="scaleColor">#ffa90c</item>
        <item name="stepWidth">12.5dp</item>
        <item name="scaleMaxHeight">20dp</item>
        <item name="scaleMinHeight">10dp</item>
        <item name="rulerColor">#e5e5e5</item>
        <item name="rulerValueFormatter">@null</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorSecondary">?attr/colorSecondary</item>
        <item name="colorSurface">?attr/colorSurface</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">?attr/shapeAppearanceLargeComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>


    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">?attr/colorSecondary</item>
        <item name="checkedIconVisible">false</item>
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
        <item name="android:textAppearance">?attr/textAppearanceBodySmall</item>
        <item name="shapeAppearance">?attr/shapeAppearanceLargeComponent</item>
        <item name="closeIconEnabled">false</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="Widget.App.Slider" parent="Widget.Material3.Slider">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Slider</item>
        <item name="labelStyle">@style/Widget.App.Tooltip</item>
    </style>

    <style name="ThemeOverlay.App.Slider" parent="">
        <item name="colorPrimary">?attr/colorPrimary</item>
        <item name="colorOnPrimary">?attr/colorOnPrimary</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.App.Tooltip" parent="Widget.Material3.Tooltip">
        <item name="android:textAppearance">?attr/textAppearanceLabelSmall</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
    </style>





</resources>
